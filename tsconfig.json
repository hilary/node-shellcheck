{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "dist"
    },
    "includes": [
        "source/*",
        "lib/*",
        "test/*"
    ],
    "exclude": ["node_modules", "dist"]
}
