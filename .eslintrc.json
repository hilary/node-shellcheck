{
    "plugins": [],
    "parser": "@typescript-eslint/parser",
    "env": {
        "commonjs": true,
        "node": true
    },
    "extends": ["google"],
    "globals": {},
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "settings": {
        "node": {
            "tryExtensions": [".js", ".json", ".node", ".ts", ".d.ts"]
        }
    },
    "rules": {
        "max-len": [
            "error",
            {
                "code": 120,
                "tabWidth": 4
            }
        ],
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "no-unused-vars": "off"
    }
}
