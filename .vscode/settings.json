{
    "editor.formatOnSave": true,
    "javascript.validate.enable": true,
    "typescript.validate.enable": true,
    "eslint.enable": true,

    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },

    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },

    "beautify.language": {
        "css": ["css", "scss"],
        "html": ["htm", "html"]
    },

    "search.exclude": {
        "external/**": true,
        "**/node_modules": true,
        "**/yarn_modules": true,
        "**/*.code-search": true
    },
}
